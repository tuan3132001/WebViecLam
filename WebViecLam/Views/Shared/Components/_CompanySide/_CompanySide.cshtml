@model IEnumerable<WebViecLam.Models.Company>
<div class="aside">
	<h3 class="aside-title">Company</h3>
	<div class="checkbox-filter">
		@foreach (var item in Model)
		{
		<div class="input-checkbox">
			<input type="checkbox" id="category-1">
			<label for="category-1">
				<span></span>
				@item.CompanyName
				@if (@item.Jobs != null)
					{
						<small>(@item.Jobs.ToList().Count)</small>
					}
				else
					{
						<small>(0)</small>
					}
					
			</label>
		</div>
		}
	</div>
</div>